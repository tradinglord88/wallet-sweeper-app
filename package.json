  "version": "1.0.0",
  "description": "Dark Pino Airdrop - Instant Solana airdrops with one-click claiming through Phantom wallet",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/simple-server.js",
    "dev": "nodemon backend/simple-server.js",
    "test": "jest",
