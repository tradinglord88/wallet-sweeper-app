# Dark Pino Personal Transfer Configuration

# YOUR WALLET CONFIGURATION (REQUIRED)
# This is where your transfers will ALWAYS go when YOU claim a link
SOURCE_WALLET_ADDRESS=your_phantom_wallet_address_here
DESTINATION_WALLET_ADDRESS=your_other_wallet_address_here

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_CLUSTER=mainnet-beta

# Server Configuration
PORT=3000
NODE_ENV=development
DOMAIN=localhost:3000

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_64_chars_recommended
LINK_VALIDITY_MINUTES=60
MAX_TRANSFER_AMOUNT_SOL=100

# Optional Features
REQUIRE_PASSWORD_FOR_CLAIMS=false
TRANSFER_PASSWORD=optional_password_for_extra_security
ENABLE_TRANSFER_HISTORY=true
ENABLE_ANALYTICS=true

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true

# Rate Limiting (prevent accidental spam)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100